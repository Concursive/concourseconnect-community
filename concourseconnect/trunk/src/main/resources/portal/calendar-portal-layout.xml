<module>
  <navigation>
    <!-- Calendar -->
    <page name="agenda">
      <row>
        <column width="250">
          <portlet name="ProjectActionsPortlet" class="button-list-vertical-">
            <title>Quick Actions</title>
            <urls>
              <value>
                <![CDATA[
                  <content>Add an Event</content>
                  <title>Add a calendar entry for ${project.title:html}</title>
                  <href>/create/${project.uniqueId}/event</href>
                  <rel>shadowbox;width=700</rel>
                  <permission>project-calendar-add</permission>
                ]]>
              </value>
            </urls>
          </portlet>
          <!-- Display Ads -->
          <portlet name="ProjectPromotionsPortlet" class="basic-list ">
            <title>Promotions</title>
            <category>${category}</category>
            <limit>3</limit>
          </portlet>
        </column>
        <column width="auto" class="main">
          <portlet name="CalendarPortlet" viewer="events">
            <title>${project.features.labelCalendar}</title>
          </portlet>
        </column>
        <column width="300">
          <portlet name="CalendarPortlet" viewer="calendar">
            <title>${project.features.labelCalendar}</title>
          </portlet>
        </column>
      </row>
    </page>

    <!-- Form -->
    <page name="form">
      <row>
        <column width="250">
          <portlet name="ProjectActionsPortlet" class="button-list-vertical-">
            <title>Quick Actions</title>
            <urls>
              <value>
                <![CDATA[
                <content>Back to the calendar</content>
                <title>${project.title:html} calendar</title>
                <href>/show/${project.uniqueId}/calendar</href>
                <permission>project-calendar-view</permission>
              ]]>
              </value>
            </urls>
          </portlet>
        </column>
        <column width="auto" class="main">
          <portlet name="CalendarPortlet" viewer="form">
            <title>${project.features.labelCalendar}</title>
          </portlet>
        </column>
        <column width="300">
          <portlet name="ContentPortlet">
            <content>Events</content>
          </portlet>
        </column>
      </row>
    </page>

    <!-- Details -->
    <page name="details">
      <row>
        <column width="250">
          <portlet name="ProjectActionsPortlet" class="button-list-vertical-">
            <title>Quick Actions</title>
            <urls>
              <value>
                <![CDATA[
                <content>Show calendar</content>
                <title>${project.title:html} calendar</title>
                <href>/show/${project.uniqueId}/calendar</href>
                <permission>project-calendar-view</permission>
              ]]>
              </value>
            </urls>
          </portlet>
        </column>
        <column width="auto" class="main">
          <portlet name="CalendarPortlet" viewer="details">
            <title>${project.features.labelCalendar}</title>
          </portlet>
        </column>
      </row>
    </page>

    <!-- Form Popup -->
    <page name="form-popup">
      <row>
        <column width="auto">
          <portlet name="CalendarPortlet" viewer="form" class="modal">
            <title>${project.features.labelCalendar}</title>
          </portlet>
        </column>
      </row>
    </page>

  </navigation>
</module>
